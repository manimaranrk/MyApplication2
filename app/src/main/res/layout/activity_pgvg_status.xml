<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fillViewport="true"
    android:weightSum="7"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"


        >



        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:weightSum="3"

            android:layout_weight="5"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"

                android:weightSum="1"

                android:id="@+id/spacelinear1">


                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:id="@+id/pgvg_status_back_imageview"
                    android:src="@drawable/back1"
                    android:layout_gravity="center"


                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/purplek_logo"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="40dp"

                    android:background="@drawable/menu"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:onClick="menuButtonClickEvent"

                    android:layout_gravity="center"

                    android:id="@+id/user_action_menu_imageview"
                    android:layout_alignTop="@+id/venuelbl" />



            </LinearLayout>



            <!--<TextView-->

            <!--29000000-->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"

                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comments"
                    android:textColor="#6A287E"
                    android:id="@+id/pgvgcomments_textview"
                    android:layout_below="@+id/owner_toggle"
                    android:layout_alignLeft="@+id/textView5"
                    android:layout_alignStart="@+id/textView5"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pgvgcomment_edittext"
                    android:minLines="3"
                    android:gravity="top|left"
                    android:maxLines="10"

                    android:background="@drawable/squareedittext1"
                    android:layout_below="@+id/pgvgcomments_textview"
                    android:layout_alignLeft="@+id/pgvgcomments_textview"
                    android:layout_alignStart="@+id/pgvgcomments_textview" />



                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Submit"
                    android:textColor="#ffffff"
                    android:background="#6A287E"
                    android:id="@+id/submit_button"
                    android:layout_below="@+id/pgvgcomment_edittext"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="21dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear3"
                    android:orientation="vertical"
                    android:layout_below="@+id/submit_button"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:weightSum="2"/>



            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>

</ScrollView>