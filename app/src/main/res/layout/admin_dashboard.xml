<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display User Details"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"

        android:textColor="#6A287E"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@drawable/squareedittext1"
        android:id="@+id/display_user_button"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/login_password_edittext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schedule Venue"

        android:layout_marginRight="40dp"

        android:textColor="#6A287E"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@drawable/squareedittext1"
        android:id="@+id/schedule_venue_button"
        android:layout_below="@+id/display_user_button"
        android:layout_alignLeft="@+id/display_user_button"
        android:layout_alignStart="@+id/display_user_button"
        android:layout_marginTop="44dp" />
</RelativeLayout>
