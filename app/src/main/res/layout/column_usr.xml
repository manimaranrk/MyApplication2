<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"

    android:orientation="vertical"

    android:id="@+id/linearLayout">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:weightSum="3">

    <TextView
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="User Name"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:textColor="#6A287E"
        android:textSize="15sp"
        android:gravity="center|left"
        android:id="@+id/username_texiview"
        android:layout_marginRight="10dp"
     />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="User Role"
        android:id="@+id/userrole_textview"
        android:layout_weight="1"
        android:textColor="#6A287E"
        android:layout_marginRight="10dp"
        android:maxLength="20"
        android:textSize="15sp"
        android:gravity="center|left"
        android:layout_toRightOf="@+id/username_texiview"
        android:layout_toEndOf="@+id/username_texiview" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Employee Id"
        android:textColor="#6A287E"
        android:textSize="15sp"
        android:maxLength="40"
        android:layout_marginRight="10dp"
        android:gravity="center|left"
        android:id="@+id/employeeid_textview"
        android:layout_weight="1"
        />

