<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.purpleknot1.activity.TargetEntityActivity">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"

        android:weightSum="3"
        android:id="@+id/spacelinear1">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="40dp"
           android:layout_gravity="center"
            android:id="@+id/tarket_back_imageview"

            android:layout_marginLeft="30dp"
            android:background="@drawable/back1"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:id="@+id/logo_linear">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_marginRight="20dp"

            android:layout_marginLeft="10dp"
            android:src="@drawable/purplek_logo"
            />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="40dp"

            android:background="@drawable/menu"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:onClick="menuButtonClickEvent"

            android:id="@+id/menu_imageview"
            android:layout_alignTop="@+id/venuelbl" />

        </LinearLayout>

        <!--<Button-->
        <!--android:layout_width="120dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Menu"-->
        <!--android:id="@+id/button"-->
        <!--android:layout_weight="1"-->
        <!--/>-->




    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/linear2"
        android:layout_below="@+id/spacelinear1"
        android:layout_toRightOf="@+id/textView5"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:weightSum="2">




        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Mandapam"
            android:background="#6A287E"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:id="@+id/mandapam_button"
            android:layout_marginRight="10dp"
           />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Bride/Groom"
            android:background="#6A287E"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:id="@+id/endclient_button"
            android:layout_marginLeft="10dp"
            />



    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/linear3"
        android:layout_below="@+id/linear2"
        android:layout_toRightOf="@+id/textView5"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:weightSum="2">




        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Decorator/Catering"
            android:background="#6A287E"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:id="@+id/decorator_button"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginRight="10dp"

             />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Photographer/Videographer"
            android:background="#6A287E"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:id="@+id/photograper_button"
            />



    </LinearLayout>




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/linear4"
        android:layout_below="@+id/linear3"
        android:layout_toRightOf="@+id/textView5"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:weightSum="2">




        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Wedding Planner"
            android:background="#6A287E"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:id="@+id/planner_button"
             />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Banquet Hall"
            android:background="#6A287E"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:id="@+id/hall_button"
            />



    </LinearLayout>

