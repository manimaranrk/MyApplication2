    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome User"
        android:textStyle="bold"
        android:textColor="#6A287E"
        android:textSize="30sp"
        android:id="@+id/welcome_textview"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/spacelinear1"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datetime_textview"
        android:text="Time"
        android:textStyle="bold"
        android:textColor="#6A287E"
        android:textSize="30sp"
        android:layout_above="@+id/toggleButton1"
        android:layout_alignLeft="@+id/currenttime_textview"
        android:layout_alignStart="@+id/currenttime_textview"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currenttime_textview"
        android:text="Time"
        android:textColor="#6A287E"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_above="@+id/datetime_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal" />

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/toggle"
        android:button="@null"
        android:textOff=""
        android:textOn=""
        android:layout_below="@+id/welcome_textview"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"

        android:layout_gravity="center_horizontal" />




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:padding="5dp"
        android:background="#6A287E"
        android:id="@+id/submit_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
</ScrollView>